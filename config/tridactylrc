"" Common search tools
set searchurls.nixpkgs https://search.nixos.org/packages?channel=unstable&type=packages&query=%s
set searchurls.nixopts https://search.nixos.org/options?channel=unstable&type=options&query=%s
set searchurls.homemanager https://home-manager-options.extranix.com/?query=%s&release=master
set searchurls.nixvim https://nix-community.github.io/nixvim/?search=%s
set searchurls.cnrtl https://www.cnrtl.fr/definition/%s

"" theming
colourscheme --url https://github.com/jrolfs/gruvbox-material-tridactyl/releases/download/v0.1.1/dark-soft.css gruvbox-material-dark-soft
" set theme greenmat
set modeindicator false

"" hint mode by text
set hintchars 5432167890
set hintfiltermode vimperator-reflow

"" replace the default "focus url" with tridactyl's cli
bind <C-l> fillcmdline_notrail
bind <C-t> fillcmdline tabopen
bind i focusinput
bind ]] tabnext
bind [[ tabprevious
bind ]f followpage next
bind [f followpage prev
